{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "destructuring": true,
            "spread": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": ["react-hooks"],
    "rules": {
        // additionsl rules here
        "react-hooks/rules-of-hooks": "error"
    }   
}